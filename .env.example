# ===========================================
# ScoreIndia Auction App - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ==== Database ====
DB_PASSWORD=your-secure-database-password-here

# ==== JWT Authentication ====
# IMPORTANT: Generate a strong secret (min 64 characters) for production
# Command: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-at-least-64-characters-long-change-in-production
JWT_EXPIRY_MINUTES=15
REFRESH_EXPIRY_HOURS=168

# ==== Environment ====
# Set to 'production' on VPS - this enables security checks
ENVIRONMENT=development

# ==== CORS (Backend) ====
# Comma-separated list of allowed frontend origins
# For production: https://scoreindia.cloud,https://www.scoreindia.cloud
ALLOWED_ORIGINS=http://localhost:3000

# ==== Frontend URLs ====
# For production, set these to your actual domain:
# NEXT_PUBLIC_API_URL=https://api.scoreindia.cloud/api
# NEXT_PUBLIC_WS_URL=wss://api.scoreindia.cloud
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ==== AWS S3 (for image uploads) ====
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
S3_BUCKET=your-bucket-name
S3_REGION=ap-south-1

# ==== Server ====
PORT=3001

# ==== AWS SSM Parameter Store (Optional) ====
# When enabled, secrets are fetched from SSM with fallback to env vars
USE_AWS_SSM=false
AWS_REGION=ap-south-1
SSM_PARAMETER_PREFIX=/auctionapp/development

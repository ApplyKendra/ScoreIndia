model ContactUsPage {
  id           String   @id @default(uuid())
  heroTitle    String   @default("Contact Us")
  heroSubtitle String?
  heroImage    String?
  address      String   @default("ISKCON Burla, Odisha")
  phoneNumbers String[]
  emails       String[]
  mapEmbedUrl  String?
  timings      String?  // Temple timings text
  isPublished  Boolean  @default(true)
  updatedAt    DateTime @updatedAt
  updatedBy    String?
}

model TempleConstructionPage {
  id                 String   @id @default(uuid())
  heroTitle          String   @default("New Temple Construction")
  heroSubtitle       String?
  heroImage          String?
  projectDescription String?  // Rich text
  targetAmount       Decimal? @db.Decimal(12, 2)
  raisedAmount       Decimal? @db.Decimal(12, 2)
  progressImages     String[]
  phases             Json?    // Array of phase objects: {name, description, status, order}
  donationLink       String?
  isPublished        Boolean  @default(true)
  updatedAt          DateTime @updatedAt
  updatedBy          String?
}

model SevaOpportunity {
  id           String   @id @default(uuid())
  title        String
  description  String
  imageUrl     String?
  amount       Decimal? @db.Decimal(10, 2)
  isRecurring  Boolean  @default(false)
  category     String?  // "Daily", "Festival", "Special"
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?
  
  @@index([isActive])
  @@index([category])
  @@index([displayOrder])
}

model NityaSevakPage {
  id              String   @id @default(uuid())
  heroTitle       String   @default("Become a Nitya Sevak")
  heroSubtitle    String?
  heroImage       String?
  description     String?  // Rich text describing the program
  benefits        Json?    // Array of benefit strings
  membershipTiers Json?    // Array of {name, amount, description, benefits}
  isPublished     Boolean  @default(true)
  updatedAt       DateTime @updatedAt
  updatedBy       String?
}

model NityaSevakApplication {
  id            String        @id @default(uuid())
  name          String
  email         String
  phone         String
  address       String?
  city          String?
  pincode       String?
  selectedTier  String
  amount        Decimal       @db.Decimal(10, 2)
  panNumber     String?
  message       String?
  status        String        @default("PENDING") // PENDING, APPROVED, REJECTED
  paymentStatus PaymentStatus @default(PENDING)
  paymentId     String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([status])
  @@index([createdAt])
  @@index([email])
}

// ============================================
// NOTIFICATION MODULE
// ============================================

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  isActive  Boolean  @default(true)
  priority  Int      @default(0)  // Higher = more important
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?
  
  @@index([isActive])
  @@index([priority])
}

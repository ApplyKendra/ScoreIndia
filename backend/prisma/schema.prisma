// ISKCON Digital Ecosystem - Database Schema
// Production-ready with security and audit fields

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// ENUMS
// ============================================

enum Role {
  USER
  SUB_ADMIN
  SUPER_ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

enum DeliveryType {
  PICKUP
  DELIVERY
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  password        String    // Bcrypt hashed
  name            String
  phone           String?
  role            Role      @default(USER)
  isEmailVerified Boolean   @default(false)
  isActive        Boolean   @default(true)
  
  // Email verification
  emailVerificationToken  String?
  emailVerificationExpiry DateTime?
  
  // Two-Factor Authentication
  twoFactorSecret   String?   // Encrypted TOTP secret
  twoFactorEnabled  Boolean   @default(false)
  twoFactorMandatory Boolean  @default(false) // True for ADMIN roles
  
  // Security fields
  refreshToken    String?   // Hashed refresh token
  lastLoginAt     DateTime?
  failedAttempts  Int       @default(0)
  lockedUntil     DateTime?
  
  // Audit fields
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  createdBy       String?   // For admin-created accounts
  
  // Relations
  orders          PrasadamOrder[]
  registrations   YouthEventRegistration[]
  addresses       UserAddress[]
  auditLogs       AuditLog[]  @relation("UserAuditLogs")
  
  @@index([email])
  @@index([role])
}

model UserAddress {
  id          String   @id @default(uuid())
  userId      String
  label       String   // "Home", "Office", etc.
  addressLine String
  city        String
  pincode     String
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

// ============================================
// PRASADAM ORDERING MODULE
// ============================================

model PrasadamCategory {
  id          String         @id @default(uuid())
  name        String         @unique // "Breakfast", "Raj-Bhog", "Dinner", "Sweets"
  description String?
  displayOrder Int           @default(0)
  isActive    Boolean        @default(true)
  imageUrl    String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  items       PrasadamItem[]
}

model PrasadamItem {
  id          String           @id @default(uuid())
  name        String
  description String?
  price       Decimal          @db.Decimal(10, 2)
  isAvailable Boolean          @default(true)
  imageUrl    String?
  
  categoryId  String
  category    PrasadamCategory @relation(fields: [categoryId], references: [id])
  
  // Inventory
  maxQuantityPerOrder Int      @default(10)
  
  // SEO/Display
  slug        String?          @unique
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  createdBy   String?
  
  @@index([categoryId])
  @@index([isAvailable])
}

model PrasadamOrder {
  id              String        @id @default(uuid())
  orderNumber     String        @unique // Human-readable order number
  
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  
  status          OrderStatus   @default(PENDING)
  deliveryType    DeliveryType
  
  // Amounts
  subtotal        Decimal       @db.Decimal(10, 2)
  deliveryFee     Decimal       @default(0) @db.Decimal(10, 2)
  totalAmount     Decimal       @db.Decimal(10, 2)
  
  // Delivery details
  deliveryAddress String?
  deliveryPhone   String?
  instructions    String?
  
  // Payment
  paymentStatus   PaymentStatus @default(PENDING)
  paymentId       String?       // Razorpay/Stripe payment ID
  paymentMethod   String?
  
  // Order items snapshot (for historical integrity)
  items           Json          // Array of {itemId, name, price, quantity}
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  confirmedAt     DateTime?
  readyAt         DateTime?
  completedAt     DateTime?
  cancelledAt     DateTime?
  cancelReason    String?
  
  @@index([userId])
  @@index([status])
  @@index([orderNumber])
  @@index([createdAt])
}

// ============================================
// TEMPLE STORE MODULE (Catalog Only)
// ============================================

model StoreCategory {
  id           String      @id @default(uuid())
  name         String      @unique // "Books", "Beads", "Deities"
  description  String?
  displayOrder Int         @default(0)
  isActive     Boolean     @default(true)
  imageUrl     String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  items        StoreItem[]
}

model StoreItem {
  id           String        @id @default(uuid())
  name         String
  description  String
  displayPrice Decimal?      @db.Decimal(10, 2) // Reference price
  inStock      Boolean       @default(true)
  imageUrl     String?
  images       String[]      // Multiple images array
  
  // Catalog fields
  categoryId   String
  category     StoreCategory @relation(fields: [categoryId], references: [id])
  
  // Filters
  author       String?       // For books
  language     String?       // For books
  material     String?       // For beads/deities
  
  // SEO/Display
  slug         String?       @unique
  isFeatured   Boolean       @default(false)
  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  createdBy    String?
  
  @@index([categoryId])
  @@index([inStock])
  @@index([isFeatured])
}

// ============================================
// YOUTH FORUM (IYF) MODULE
// ============================================

model YouthEvent {
  id              String                     @id @default(uuid())
  title           String
  slug            String?                    @unique
  description     String
  content         String?                    // Rich text content
  
  // Event details
  date            DateTime
  endDate         DateTime?
  location        String
  venue           String?
  
  // Registration
  maxParticipants Int?
  registrationFee Decimal?                   @db.Decimal(10, 2)
  registrationEnd DateTime?
  
  // Display
  imageUrl        String?
  status          EventStatus                @default(UPCOMING)
  isFeatured      Boolean                    @default(false)
  preJoinedCount  Int                        @default(0) // Admin can set pre-joined count for display
  
  createdAt       DateTime                   @default(now())
  updatedAt       DateTime                   @updatedAt
  createdBy       String?
  
  registrations   YouthEventRegistration[]
  
  @@index([date])
  @@index([status])
}

model YouthEventRegistration {
  id           String     @id @default(uuid())
  
  eventId      String
  event        YouthEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  
  // Registration details
  phone        String?
  emergencyContact String?
  dietaryReq   String?
  
  // Payment (if applicable)
  paymentStatus PaymentStatus @default(PENDING)
  paymentId    String?
  
  isConfirmed  Boolean    @default(false)
  
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  @@unique([eventId, userId]) // One registration per user per event
  @@index([eventId])
  @@index([userId])
}

// ============================================
// MEDIA GALLERY
// ============================================

model GalleryAlbum {
  id          String        @id @default(uuid())
  title       String
  description String?
  coverImage  String?
  isPublished Boolean       @default(false)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  createdBy   String?
  
  media       GalleryMedia[]
}

model GalleryMedia {
  id          String       @id @default(uuid())
  albumId     String
  album       GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  
  type        String       // "image" or "video"
  url         String
  thumbnailUrl String?
  title       String?
  description String?
  displayOrder Int         @default(0)
  
  createdAt   DateTime     @default(now())
  createdBy   String?
  
  @@index([albumId])
}

// ============================================
// BLOG MODULE
// ============================================

model BlogPost {
  id           String    @id @default(uuid())
  title        String
  slug         String    @unique
  excerpt      String?
  content      String    // Rich text content
  coverImage   String?
  
  authorId     String?
  authorName   String    // Store name for display even if user deleted
  
  tags         String[]
  isPublished  Boolean   @default(false)
  publishedAt  DateTime?
  
  // SEO
  metaTitle    String?
  metaDesc     String?
  
  viewCount    Int       @default(0)
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  @@index([slug])
  @@index([isPublished])
  @@index([publishedAt])
}

// ============================================
// AUDIT LOG (For compliance and security)
// ============================================

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String   // "CREATE", "UPDATE", "DELETE", "LOGIN", "LOGOUT", "2FA_ENABLED", etc.
  entity      String   // "User", "Order", etc.
  entityId    String?
  oldValue    Json?
  newValue    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  // Relation
  user        User?    @relation("UserAuditLogs", fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
}

// ============================================
// HERO SLIDESHOW (Admin-managed)
// ============================================

model HeroSlide {
  id          String   @id @default(uuid())
  title       String
  subtitle    String?
  imageUrl    String
  buttonText  String?
  buttonLink  String?
  gradient    String?  // CSS gradient class (e.g., "from-orange-500 to-pink-500")
  displayOrder Int     @default(0)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  
  @@index([isActive])
  @@index([displayOrder])
}

// ============================================
// DARSHAN MODULE (Temple Timings, Aarti, Gallery)
// ============================================

model DarshanSetting {
  id        String   @id @default(uuid())
  key       String   @unique   // "youtube_link", "temple_open", "temple_close"
  value     String              // The actual value
  updatedAt DateTime @updatedAt
  updatedBy String?
}

model AartiSchedule {
  id           String   @id @default(uuid())
  name         String
  time         String             // e.g., "04:30 AM"
  description  String?
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([isActive])
  @@index([displayOrder])
}

model DarshanImage {
  id           String   @id @default(uuid())
  title        String
  description  String?
  url          String
  date         DateTime @default(now())    // For date-wise filtering
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?
  
  @@index([isActive])
  @@index([date])
  @@index([displayOrder])
}

// ============================================
// CONTENT PAGES (Admin-managed)
// ============================================

model AboutUsPage {
  id           String   @id @default(uuid())
  heroTitle    String   @default("About ISKCON Burla")
  heroSubtitle String?
  heroImage    String?
  mission      String?  // Rich text content
  missionImage String?
  vision       String?  // Rich text content
  history      String?  // Rich text content
  historyImages String[]

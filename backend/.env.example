# ============================================
# ISKCON Burla Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# 
# SECURITY NOTES:
# - Never commit .env with real values to git
# - Use strong secrets (32+ characters) in production  
# - Rotate credentials if they may have been exposed
# ============================================

# ============================================
# REQUIRED - Database
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/iskcon_db?schema=public"

# ============================================
# REQUIRED - JWT Secrets (CRITICAL for security)
# ============================================
# Generate strong secrets with: openssl rand -hex 32
# MUST be 32+ characters in production or server will fail to start
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# REQUIRED - AWS S3 (for image uploads)
# ============================================
# Use IAM roles instead of access keys in production
AWS_REGION="ap-south-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET_NAME="your-bucket-name"

# ============================================
# REQUIRED - Database Seeding
# ============================================
# Used for initial admin accounts - must be 12+ characters
# Set before running: npx prisma db seed
SEED_ADMIN_PASSWORD="YourSecurePassword123!"

# ============================================
# OPTIONAL - Redis (falls back to in-memory if not set)
# ============================================
# Recommended for production for OTP storage and rate limiting
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ============================================
# OPTIONAL - Razorpay (for payments)
# ============================================
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""

# ============================================
# Application Settings
# ============================================
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# ============================================
# Rate Limiting (requests per TTL window)
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

